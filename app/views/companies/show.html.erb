<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<%= form_with(model: [ @company, @employee ], local: true) do |form| %>
  <%= form.hidden_field :company_id, value: @company.id %>
  <h5>Create New Employee</h5>
  <p>Name</p>
    <%= form.text_field :name%> <br><br>
  <p>Last Name</p>
    <%= form.text_field :last_name%> <br><br>
  <p>E-mail</p>
    <%= form.text_field :email%> <br><br>
  <p>√Årea</p>
    <%= form.select :area_id, Area.all.collect{|x| [x.name, x.id]}, id: :employee_area_id, prompt: "Select Area"%> <br><br>
    <%= form.submit 'Crear' %>
<% end %>

<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
<h3>Employees' List</h3>

<table class="table table-hover">
    <thead>

         <th>
           <th scope="col">Name</th>
           <th scope="col">Last Name</th>
           <th scope="col">Email</th>
           <th scope="col">Area</th>
           <th scope="col">Action</th>
         </th>
     </thead>
     <% @company.employees.each do |employee| %>
     <tbody>
    <tr>
      <th>
      <td><%= employee.name %></td>
      <td><%= employee.last_name %></td>
      <td><%= employee.email %></td>
      <td><%= employee.area %></td>
      <td>  <%= link_to "delete", company_employee_path(@company, employee),
     method: :delete %></td>
   </th>
    </tr>
       <% end %>
</table>
